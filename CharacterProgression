// --- Character Progression ---
using UnityEngine;

public class CharacterProgression : MonoBehaviour
{
    public int strength = 10;
    public int agility = 10;
    
    public void LevelUp()
    {
        strength += 2;
        agility += 2;
        Debug.Log($"New stats - Strength: {strength}, Agility: {agility}");
    }
}
